<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/horizontalScrollView_ID"
    android:layout_width="wrap_content"
    android:layout_height="200dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/bgBlue"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/no_image"
            android:src="@drawable/bg_blue"
            android:focusable="true" />

        <ImageView
            android:id="@+id/bgOrange"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/no_image"
            android:src="@drawable/bg_orange"/>

        <ImageView
            android:id="@+id/bgGreen"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/no_image"
            android:src="@drawable/bg_green"/>

        <ImageView
            android:id="@+id/bgRed"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/no_image"
            android:src="@drawable/bg_red"/>

        <ImageView
            android:id="@+id/bgPurple"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/no_image"
            android:src="@drawable/bg_purple"/>
    </LinearLayout>

</HorizontalScrollView>